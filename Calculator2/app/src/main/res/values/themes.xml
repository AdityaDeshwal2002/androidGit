<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">28dp</item>
        <item name="cornerRadius">500dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#373737</item>
        <item name="android:iconTint">@color/purple_700</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@android:color/transparent</item>
    </style>

    <style name="num_btns" parent="buttons">
        <item name="backgroundTint">@color/humane</item>
        <item name="android:onClick">"onButtonClick"</item>
    </style>

    <style name="opr_btns" parent="buttons">
        <item name="backgroundTint">@color/dacotaBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">"onButtonClick"</item>
    </style>
    <style name="eq_btns" parent="buttons">
        <item name="backgroundTint">@color/dacotaBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">"onEqsButtonClick"</item>
    </style>


</resources>